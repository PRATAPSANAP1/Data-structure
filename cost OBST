#include<iostream>
using namespace std;
class OBST
{
public:
int weight(int i,int j,int sp[],int usp[])
{
int wt=0;
for(int k=i;k<=j;k++)
{
wt+=sp[k];
}
for(int k=i;k<=j+1;k++)
{
wt+=usp[k];
}
return wt;
}

int costs(int i,int j,int sp[],int usp[])
{
int k=0,cost=0,sum=0;
for(int z=i;z<j;z++)
{
for(int p=i;p<j;p++)
{
k=i+1;
if(i==j)
{
cost=0;
}
else 

{
cost=costs(i,k-1,sp,usp)+costs(k,j,sp,usp);
}

if(cost<sum)
{
sum=cost;
}
}
sum+=weight(i,j,sp,usp);
}
return sum;
}


};

int main()
{
OBST p;
int n;
cout<<"Enter the number of keys:";
cin>>n;
int key[n],sp[n],usp[n+1];
cout<<"Enter the keys: ";
for(int i=0;i<n;i++)
{
cin>>key[i];
}
cout<<"Enter the successful probability: ";
for(int i=0;i<n;i++)
{
cin>>sp[i];
}
cout<<"Enter the Unsuccessful probability: ";
for(int i=0;i<n+1;i++)
{
cin>>usp[i];
}
for(int i=0;i<n;i++)
{
for(int j=i;j<n;j++)
{
cout<<p.weight(i,j,sp,usp)<<endl;
cout<<p.cost(i,j,sp,usp)<<endl;
}
}
return 0;
}
